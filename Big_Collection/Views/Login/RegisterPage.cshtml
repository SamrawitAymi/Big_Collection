@model Big_Collection.ViewModels.UserRegistrationViewModel

<h1>Registration Page</h1>

@{
    ViewData["Title"] = "RegisterPage";
}

@if (ViewBag.Exists != null)
{
    <div class="alert alert-warning" role="alert">
        @ViewBag.Exists!
    </div>
}

<div class="card  mb-3 simple-linear shadow-lg cart-padding">
    <form method="post" asp-action="RegisterPage">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Email">E-mail adress <label class="text-danger">*</label></label>
                <input asp-for="Email" type="email" placeholder="name@exempel.com" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Password">Passord <label class="text-danger">*</label></label>
                <input type="password" asp-for="Password" placeholder="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="RePassword">Rewrite Password again<label class="text-danger">*</label></label>
                <input type="password" asp-for="RePassword" placeholder="confirm passsword" class="form-control">
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="FirstName">First Name <label class="text-danger">*</label></label>
                <input type="text" asp-for="FirstName" placeholder="your first Name" class="form-control">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="LastName">Last Name <label class="text-danger">*</label></label>
                <input type="text" asp-for="LastName" placeholder= "your last Name" class="form-control">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Address">Adress <label class="text-danger">*</label></label>
                <input type="text" asp-for="Address" placeholder="your street adress" class="form-control">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="City">City <label class="text-danger">*</label></label>
                <input type="text" asp-for="City" placeholder="city" class="form-control">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Zip">Post number <label class="text-danger">*</label></label>
                <input type="text" asp-for="Zip" placeholder="your postnumber" class="form-control">
                <span asp-validation-for="Zip" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="PhoneNumber">Phone number <label class="text-danger">*</label></label>
                <input type="text" asp-for="PhoneNumber" placeholder="your phone number" class="form-control">
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
