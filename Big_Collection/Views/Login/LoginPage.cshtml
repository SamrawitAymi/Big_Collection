@model Big_Collection.ViewModels.UserLoginViewModel
@{
    ViewData["Title"] = "LoginPage";
}
@ViewBag.Message
<h1>Sign in Page </h1>

<div class="card  mb-3 simple-linear shadow-lg cart-padding">
    <form method="post" asp-action="LoginPage">
        <p></p>
        <div class="form-group">
            <label asp-for="UserName">Email adress</label>
            <input asp-for="UserName" type="email" class="form-control">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" class="form-control">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <div class="checkbox">
                <label asp-for="Remember">
                    <input asp-for="Remember" />
                    Remember me
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Sign in</button>
        <p></p>
        <a class="btn btn-outline-dark btn-sm" asp-area="" asp-controller="Login" asp-action="RegisterPage">Sign up</a>

    </form>
</div>